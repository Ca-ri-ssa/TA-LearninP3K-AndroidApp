    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home" >

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.carissac.learninp3k.view.home.HomeFragment"
        android:label="@string/bottom_bar_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.carissac.learninp3k.view.news.NewsFragment"
        android:label="@string/bottom_bar_news"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_course"
        android:name="com.carissac.learninp3k.view.course.CourseFragment"
        android:label="@string/bottom_bar_class"
        tools:layout="@layout/fragment_course" />

    <fragment
        android:id="@+id/navigation_profile"
