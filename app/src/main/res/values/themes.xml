<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LearninP3K" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorOnSecondary">@color/brown</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSecondaryContainer">@color/lightBlue</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="CustomRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">?attr/colorPrimary</item>
    </style>

    <style name="TextColorSuccess">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="ColorSuccessStyle">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">16dp</item>
    </style>

    <style name="ButtonStyleOutline">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">16dp</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="SearchViewFont" >
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchBarText" parent="TextAppearance.Material3.SearchBar">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="SearchBarCustom" parent="Widget.Material3.SearchBar.Outlined">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="backgroundColor">?attr/colorSurfaceVariant</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="HelperTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LeaderboardStyleHighlightedText">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.LearninP3K" parent="Base.Theme.LearninP3K" />
</resources>