<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LearninP3K" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorOnPrimary">@color/darkBlue</item>
        <item name="colorSecondary">@color/lightYellow</item>
        <item name="colorOnSecondary">@color/darkBrown</item>
        <item name="colorError">@color/salmon</item>
        <item name="colorOnError">@color/darkRed</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="FeedbackStyle">
        <item name="android:backgroundTint">@color/lime</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>

    <style name="TextColorSuccess.bold">
        <item name="android:textColor">@color/lime</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextColorError.bold">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextColorSecondary.bold">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextColorSuccess">
        <item name="android:textColor">@color/lime</item>
    </style>

    <style name="TextColorError">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <style name="TextColorSecondary">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="ScoreColorType">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ScoreColorType.GoodPass">
        <item name="android:background">@color/lime</item>
        <item name="android:textColor">@color/darkGreen</item>
    </style>

    <style name="ScoreColorType.Pass">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="ScoreColorType.NotPass">
        <item name="android:background">?attr/colorError</item>
        <item name="android:textColor">?attr/colorOnError</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">16dp</item>
    </style>

    <style name="ButtonStyleOutline">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">16dp</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchViewFont">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="SearchBarCustom" parent="Widget.Material3.SearchBar.Outlined">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="backgroundColor">?attr/colorSurfaceVariant</item>
        <item name="strokeWidth">2dp</item>
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="LeaderboardStyleHighlightedText">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HelperTextStyle.Success" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">@color/lime</item>
    </style>

    <style name="HelperTextStyle.Warning" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="HelperTextStyle.Error" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:textColor">?attr/colorError</item>
    </style>
</resources>